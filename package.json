{
  "license": "MIT",
  "version": "1.0.0",
  "private": false,
  "name": "solidity-hardhat-typescript-boilerplate",
  "description": "Solidity Hardhat Typescript Boilerplate",
  "scripts": {
    "prepare": "husky install; rm -rf .husky/pre-push; husky add .husky/pre-push 'yarn run hook:pre-push'; rm -rf .husky/_/.gitignore",
    "start": "hardhat node",
    "compile": "hardhat compile",
    "console": "hardhat console",
    "test": "hardhat test",
    "coverage": "truffle run coverage --network coverage",
    "fresh-test": "kill -9 $(lsof -t -i:6545); ganache -p 6545 &>/dev/null && truffle migrate --reset --network fresh_test && truffle deploy --network fresh_test && truffle test --network fresh_test",
    "generate-flatten": "generateFlatten.sh",
    "generate-bin": "generateBin.sh",
    "generate-abi": "generateAbi.sh",
    "generate-docs": "rm -rf docs/; solidity-docgen --solc-module solc",
    "auto-generate-docs": "checkSolFilesInCommits.sh && yarn run generate-docs && git add docs/ && git commit -m 'auto: updated docs' &>/dev/null",
    "format": "prettier '**/{*,''}.{json,js,sol}' --write; eslint '**/{*,''}.{json,js}' --fix; solhint 'contracts/*.sol' --fix;",
    "format:json": "prettier '**/{*,''}.json' --write; eslint '**/{*,''}.json' --fix;",
    "format:js": "prettier '**/{*,''}.js' --write; eslint '**/{*,''}.js' --fix;",
    "format:sol": "prettier '**/*.sol' --write; solhint 'contracts/*.sol' --fix;",
    "lint": "shellcheck bin/*; cspell lint --dot --gitignore '**/{*,''}{.,''}*'; prettier '**/{*,''}.{json,js,sol}' --check; solhint 'contracts/*.sol'; eslint '**/{*,''}.{json,js}';",
    "hook:pre-push": "shellcheck bin/* && cspell lint --dot --gitignore '**/{*,''}{.,''}*' && prettier '**/{*,''}.{json,js,sol}' --check && solhint 'contracts/*.sol' && eslint '**/{*,''}.{json,js}' && yarn run fresh-test && yarn run auto-generate-docs"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run hook:pre-push"
    }
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chai": "^4.3.6",
    "cspell": "^5.19.4",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.2",
    "hardhat": "^2.9.2",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "prettier": "^2.6.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "shellcheck": "^1.1.0",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20",
    "solidity-docgen": "^0.5.16",
    "ts-node": "^10.7.0",
    "typechain": "^5.1.2",
    "typescript": "^4.6.3"
  }
}
